<%= generator_label %>
<%%= form_for(@company) do |f| %>
  <%% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%%= pluralize(@company.errors.count, "error") %> <%%= I18n.t('helpers.saveerror') %></h2>

      <ul>
      <%% @company.errors.full_messages.each do |message| %>
        <li><%%= message %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

  <div class="field">
    <%%= f.label :company_name %><br>
    <%%= f.text_field :company_name %>
  </div>

  <div class="actions">
    <%%# = f.submit %>
    <p><br/>
    <%% if ( params[:action] == 'show' ) %>
      <%%= link_to companies_path, :class => "btn btn-primary btn-xs" do %>
        <%% t('helpers.cancel') %>
      <%% end %>
    <%% else %>    <%%= link_to companies_path, :class => "btn btn-default btn-xs" do %>
        <%% t('helpers.cancel') %>
      <%% end %>
      <button type="submit" class="btn btn-success btn-xs submit">Company <%%= t('helpers.save') %></button>
    <%% end %>  </p>
  </div>

<%% end %>
