<%= generator_label %>
<%%= form_for(@profile) do |f| %>
  <%% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%%= pluralize(@profile.errors.count, "error") %> <%%= I18n.t('helpers.saveerror') %></h2>

      <ul>
      <%% @profile.errors.full_messages.each do |message| %>
        <li><%%= message %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>

  <%%# Admin may select user without an existing profile %>
  <%% if (@profile.new_record? && current_user.admin? && !(current_user.id == @profile.user_id))%>
  <div class="field">
    <%%= f.label "User without Profile" %><br>
    <%%= f.select :user_id, profile_user_id_select %>
  </div>
  <%% elsif (current_user.id == @profile.user_id) %>
    <%%= f.hidden_field :user_id, :value => @profile.user_id %>
  <%% else %>
  <div class="field">
    <%%= f.hidden_field :user_id, :value => @profile.user_id %>
    <%%= f.label :user_id %><br>
    <%%= @profile.user.email %>
  </div>
  <%% end %>

  <div class="field">
    <%%= f.label :profile_first_name %><br>
    <%%= f.text_field :profile_first_name %>
  </div>
  <div class="field">
    <%%= f.label :profile_last_name %><br>
    <%%= f.text_field :profile_last_name %>
  </div>
  <div class="field">
      <%%# = f.label :profile_preferred_right_id, t('chows.form.chow_estimated_costs') %>
      <%%= f.label :profile_preferred_right_id, "Preferred Role" %><br>
      <%%= f.select :profile_preferred_right_id, profile_preferred_right_id_select, {:include_blank => true } %>
  </div>

  <div class="actions">
    <%%# = f.submit %>
    <p><br/>
    <%% if ( params[:action] == 'show' ) %>
      <%%= link_to quit_user_profile_path, :class => "btn btn-primary btn-xs" do %>
        <%% t('helpers.cancel') %>
      <%% end %>
    <%% else %>    <%%= link_to quit_user_profile_path, :class => "btn btn-default btn-xs" do %>
        <%% t('helpers.cancel') %>
      <%% end %>
      <button type="submit" class="btn btn-success btn-xs submit">Profile <%%= t('helpers.save') %></button>
    <%% end %>  </p>
  </div>

<%% end %>
